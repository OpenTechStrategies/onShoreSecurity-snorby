<div id="stats" class='grid_12 boxit' data-action='<%= params[:action] %>' data-page='<%= params[:page].to_i %>'>
	
	<ul class='table'>
		
		<li class='header'>
			<div class='row'>

        <div class='sensor'>
          <%= sortable(:sensor_name, 'Sensor')%>
        </div>
        
        <div class='action'>Instance</div>
        
        <div class='message'>
          <%= sortable(:name, 'Stat Name')%>
        </div>
        
        <div class='trigger'>
          <%= sortable(:value, 'Value')%>
        </div>
        
        <div class='timestamp'>
          <%= sortable(:timestamp, 'Timestamp')%>
        </div>

			</div>
		</li>
		
		<div class='content'>
			<%= render @stats %>
		</div>
		
	</ul>

	<%= pager(@stats, request.fullpath) %>
	
</div>