<div class='section-title'>Notes</div>

<div id='notes_<%= @event_filtering.id %>' class='notes'>

	<% if @notes.blank? %>
		<strong class='no-notes'>
			It currently has zero notes - You can add a note by clicking the button below.<br />
			<br />
		</strong>
	<% else %>
		<% @notes.each do |note| %>
			<%= render :partial => 'event_filterings/note', :locals => {:note => note} %>
		<% end %>
	<% end %>
	
	<div id='new_main_note' class='fake_form' data-object-id='<%= @event_filtering.id %>'>
		<%= text_area_tag :body, {}, :style => 'display:none;' %>
		
		<%= form_actions do %>
			<%= button "Add A Note", :class => 'add_new_main_note', :data_class => 'event_filtering' %>
		<% end %>
		
	</div>
	
</div>